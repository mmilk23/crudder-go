            "type": "object",
            "properties": {
                "column_default": {
                    "type": "string"
                },
                "column_name": {
                    "type": "string"
                },
                "data_type": {
                    "type": "string"
                },
                "foreign_key": {
                    "type": "string"
                },
                "is_nullable": {
                    "type": "boolean"
                },
                "is_primary_key": {
                    "type": "boolean"
                },
                "referenced_column": {
                    "type": "string"
                },
